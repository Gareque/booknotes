<%- include("partials/header.ejs") %>

<div class="container my-5">
  <div class="row mb-2 align-items-center">
    <div class="col-sm-4">
      <h1 class="mb-0">Books I have read:</h1>
    </div>
    <div class="col-sm-6 text-left">
      <form action="/create" method="GET" style="display: inline;">
        <button type="submit" class="btn btn-primary">Add New Book</button>
      </form>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-1 g-4 align-items-start">
    <% for(let book of books) { %>
    <div class="col book-entry">
      <div class="card h-100">
        <!-- Book Content and Cover Image -->
        <div class="card-body d-flex align-items-center">
          <div style="flex-shrink: 0; width: 120px; margin-right: 1rem;">
            <!-- Image starts hidden, will be populated via JS -->
            <img
              class="cover-image"
              alt="Cover for <%= book.title %>"
              data-isbn="<%= book.isbn %>"
              style="display: none; max-height: 150px; width: auto;"
            />
          </div>

          <div class="flex-grow-1">
            <h5 class="card-title"><%= book.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Author: <%= book.author %></h6>
            <p class="card-text">Rating: <%= book.rating %></p>
            <p class="card-text">Description: <%= book.comments %></p>
            <p class="card-text">ISBN: <%= book.isbn %></p>
          </div>
        </div>

        <!-- Footer with Edit/Delete buttons -->
        <div class="card-footer d-flex justify-content-between">
          <div class="button-row mb-3">
            <form
              action="/books/<%= book.id %>/edit"
              method="GET"
              style="display: inline;"
            >
              <button type="submit" class="button btn btn-secondary">Edit</button>
            </form>

            <form
              action="/delete/<%= book.id %>?_method=DELETE"
              method="POST"
              style="display: inline;"
            >
              <button type="submit" class="button btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <hr class="divider" />
    </div>
    <% } %>
  </div>
</div>

<%- include("partials/footer.ejs") %>
