<script>
  const toggle = document.getElementById('themeToggle');
  const html = document.documentElement;

  toggle.addEventListener('change', () => {
    const colorTheme = toggle.checked ? 'light' : 'dark';
    html.setAttribute('data-bs-theme', colorTheme);
    localStorage.setItem('theme', colorTheme); // Save preference
  });

  // Load saved theme on page load
  const theme = localStorage.getItem('theme');
  if (theme) {
    html.setAttribute('data-bs-theme', theme);
    toggle.checked = theme === 'light';
  }
</script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const coverImages = document.querySelectorAll(".cover-image");

  coverImages.forEach(img => {
    const isbn = img.dataset.isbn;
    if (!isbn) return;

    const url = `https://covers.openlibrary.org/b/isbn/${isbn}-M.jpg`;

    img.src = url;
    img.style.display = "block";

    img.onerror = () => {
      img.style.display = "none"; // Hide broken images
      console.log(`Cover not found for ISBN ${isbn}`);
    };
  });
});
</script>


